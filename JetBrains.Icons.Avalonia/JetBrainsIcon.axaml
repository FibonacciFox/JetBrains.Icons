<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:avalonia="clr-namespace:JetBrains.Icons.Avalonia">
    <avalonia:JetBrainsIconKindToViewboxConverter x:Key="ViewboxConverter" />

    <ControlTheme x:Key="{x:Type avalonia:JetBrainsIcon}" TargetType="avalonia:JetBrainsIcon">
        <Setter Property="Height" Value="16" />
        <Setter Property="Width" Value="16" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Viewbox>
                            <ContentControl Content="{TemplateBinding Kind, Converter={StaticResource ViewboxConverter}}" />
                        </Viewbox>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </ControlTheme>
</ResourceDictionary>